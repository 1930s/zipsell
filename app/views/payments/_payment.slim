.item
	.level
		.level-left
			.level-item 
				span.tag.is-success #{payment.amount.currency.symbol}#{payment.amount}
			.level-item
				span.tag.is-light #{payment.number}
			.level-item 
				a href="#{payment_path(payment)}" Payment from 
				| &nbsp;
				| #{payment.customer.email} for #{payment.product.name}
		.level-right
			.level-item #{time_ago_in_words payment.created_at} ago